{
  "name": "express-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate for quickly building Node.js API services with Express and Typescript",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prestart": "npm run build",
    "start": "node ./dist/app.js",
    "start:watch": "node --watch ./dist/app.js",
    "test": "jest",
    "watch": "npx concurrently \"npm run build:watch\" \"npm run start:watch\""
  },
  "keywords": [
    "express",
    "typescript",
    "boilerplate"
  ],
  "author": "Galih Prastian <galihpras33@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.14",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.18",
    "@types/http-errors": "^2.0.2",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.10.0"
  }
}
