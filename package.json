{
  "name": "express-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate for quickly building Node.js API services with Express and Typescript",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "start:watch": "node --watch ./dist/index.js",
    "test": "jest",
    "watch": "npx concurrently \"npm run build:watch\" \"npm run start:watch\""
  },
  "keywords": [
    "express",
    "typescript",
    "boilerplate"
  ],
  "author": "Galih Prastian <galihpras33@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.14",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.18",
    "@types/http-errors": "^2.0.2",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.2",
    "@types/source-map-support": "^0.5.8",
    "@types/swagger-ui-express": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-validator-jsonschema": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "routing-controllers-openapi": "^4.0.0",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^5.0.0",
    "typedi": "^0.10.0",
    "winston": "^3.10.0"
  }
}
