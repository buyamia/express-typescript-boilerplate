{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "ES2021",
    "module": "commonjs",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "pretty": true,
    "paths": {
      "@controllers/*": [
        "src/app/controllers/*"
      ],
      "@middlewares/*": [
        "src/app/middlewares/*"
      ],
      "@models/*": [
        "src/app/models/*"
      ],
      "@services/*": [
        "src/app/services/*"
      ],
      "@config": [
        "src/config"
      ],
      "@lib/*": [
        "src/lib/*"
      ]
    }
  },
  "exclude": [
    "./dist/**/*",
    "node_modules",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "jest.config.ts"
  ]
}
